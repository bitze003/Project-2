<div class="container">
  <header>
    {{> header}}
  </header>
</div>

<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-10 offset-1">
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <input type="text" id="big-idea" class="new-pitch form-control" aria-describedby="example-text" placeholder="What's the big idea?" onfocus="this.placeholder = ''">
          </div>
          <button class="submit btn btn-light float-left">Submit</button>
        </form>
        <span class="pitch-container"></span>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/view.js"></script>
